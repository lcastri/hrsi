<launch>
  <arg name="bag_name" required="true" />

  <node pkg="rosbag" type="record" name="rosbag_record_data"
        args="record -O $(arg bag_name).bag 
              /velodyne_points 
              /head_controller/state 
              /torso_controller/state 
              /mobile_base_controller/cmd_vel 
              /robot_pose
              /tf 
              /tf_static"
  />

</launch> 
